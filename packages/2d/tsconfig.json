{
  "extends": "../../tsconfig.build.json",
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "core/*": ["../core/src/*"],
      "2d/*": ["./src/*"]
    }
  },
  "references": [
    { "path": "../core" }
  ]
}
